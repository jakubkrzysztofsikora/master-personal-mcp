{
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "baseUrl": "https://master-personal-mcp.herokuapp.com"
  },
  "auth": {
    "enabled": true,
    "users": [
      {
        "id": "admin",
        "email": "sikora@jakub.team",
        "name": "Jakub Sikora",
        "token": "gw_live_xxxxxxxxxxxxxxxxxxxx",
        "scopes": ["tools:read", "tools:execute"]
      }
    ]
  },
  "mcpServers": [
    {
      "id": "garmin",
      "name": "Garmin Connect",
      "description": "Access Garmin fitness and health data - activities, sleep, steps, heart rate, body composition",
      "command": "uvx",
      "args": [
        "--python", "3.12",
        "--from", "git+https://github.com/Taxuspt/garmin_mcp",
        "garmin-mcp"
      ],
      "env": {
        "GARMIN_EMAIL": "${GARMIN_EMAIL}",
        "GARMIN_PASSWORD": "${GARMIN_PASSWORD}"
      },
      "enabled": true,
      "requiredScopes": ["tools:read"]
    }
  ]
}
